<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="Actors" type="XActors">
  </xs:element>

  <xs:complexType name ="XActors">
    <xs:sequence>
      <xs:element maxOccurs="unbounded" name="Actor" type ="XActor"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="XActor">
    <xs:sequence>
      <xs:element name="Objects" type ="XObjects"/>
      <xs:element name="Description" type="xs:string" />
      <xs:element name="Comment" type="xs:string" minOccurs ="0"/>
      <xs:element name="Comment-Other" type="xs:string" minOccurs ="0"/>
      <xs:element name="Variables" type="XVariables"/>
    </xs:sequence>
    <xs:attribute name="id" type="xs:string" use="required" />
  </xs:complexType>

  <xs:complexType name="XObjects">
    <xs:sequence>
      <xs:element maxOccurs="unbounded" name="Object" type="xs:string" />
    </xs:sequence>
    <xs:attribute name="varied" type="xs:string" use="optional" />
  </xs:complexType>

  <xs:complexType name ="XVariables">
    <xs:sequence>
      <xs:element minOccurs ="0" maxOccurs="unbounded" name ="Variable" type ="XVariable"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="XVariable">
    <xs:sequence>
      <xs:element name="Mask">
        <xs:complexType>
          <xs:simpleContent>
            <xs:extension base="xs:string">
              <xs:attribute name="type" type="Mask" use="required" />
            </xs:extension>
            
          </xs:simpleContent>
        </xs:complexType>
      </xs:element>
      <xs:element name="Description" type="xs:string" />
      <xs:element name="UI" type="UI" minOccurs="1" maxOccurs="1"></xs:element>
      <xs:element name="Comment" type="xs:string" minOccurs ="0"/>
      <xs:element name="Default" minOccurs="0" type="xs:string"/>
      <xs:element name="Value" minOccurs ="0" maxOccurs="unbounded" >
        <xs:complexType>
          <xs:sequence>
            <xs:element name="Data" type ="XValueData"/>
            <xs:element name="Description" type="xs:string"/>
            <xs:element name ="Comment" type ="xs:string" minOccurs ="0" />
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="altvar" type="xs:string" use="optional" />
  </xs:complexType>

  <xs:simpleType name="Mask">
    <xs:restriction base="xs:string">
      <xs:enumeration value="&amp;"/>
      <xs:enumeration value="|"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="UI">
    <xs:sequence>
      <xs:element minOccurs ="0" maxOccurs="unbounded" name ="Param">
        <xs:complexType>
          <xs:simpleContent>
            <xs:extension base="xs:string">
              <xs:attribute name="id" type="xs:string" use="required"/>
            </xs:extension>
          </xs:simpleContent>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="name" type ="UITypes" default="default"/>
  </xs:complexType>

  <xs:simpleType name="UITypes">
    <xs:restriction base="xs:string">
      <xs:enumeration value="bitflag" />
      <xs:enumeration value="default" />
      <xs:enumeration value="path" />
      <xs:enumeration value="randomdrop" />
      <xs:enumeration value="switchflag" />
      <xs:enumeration value="select" />
      <xs:enumeration value="textid" />
      <xs:enumeration value="numupdown" />
    </xs:restriction>
  </xs:simpleType>


  <xs:complexType name="XValueData">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="repeat" type="xs:string" use="optional" />
        <xs:attribute name="object-id" type="xs:string" use="optional" />
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

</xs:schema>